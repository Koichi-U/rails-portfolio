<%#部分テンプレートのファイル %>
<div class="admin-header">
  <div class="admin-user">
    <a href="<%= user_path(current_user.id) %>">
      <img src="/assets/Admin.png" alt="">
      <%= current_user.username %>
    </a>
  </div>
  <div class="admin-lists">
    <div class="admin-list-large admin-list">
      <p>DB</p>
      <div class="admin-list-small admin-list admin-list-db-user">
        <a <% if current_page?(userlist_path) %>style="color: #838383;"<% else %>href="<%= userlist_path %>"<% end %>>User</a>
      </div>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(articlelist_path) %>style="color: #838383;"<% else %>href="<%= articlelist_path %>"<% end %>>Article</a>
      </div>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(tagginglist_path) %>style="color: #838383;"<% else %>href="<%= tagginglist_path %>"<% end %>>Tagging</a>
      </div>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(commentlist_path) %>style="color: #838383;"<% else %>href="<%= commentlist_path %>"<% end %>>Comment</a>
      </div>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(urllist_path) %>style="color: #838383;"<% else %>href="<%= urllist_path %>"<% end %>>Url</a>
      </div>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(taglist_path) %>style="color: #838383;"<% else %>href="<%= taglist_path %>"<% end %>>Tag</a>
      </div>
    </div>
    <div class="admin-list-large  admin-list">
      <p>Admin</p>
      <div class="admin-list-small admin-list">
        <a <% if current_page?(adminuserlist_path) %>style="color: #838383;"<% else %>href="<%= adminuserlist_path %>"<% end %>>User List</a>
      </div>
    </div>
  </div>
</div>