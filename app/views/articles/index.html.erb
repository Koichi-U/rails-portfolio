<div class="body-article-index">
  This is index.

  <div class="articles">
    <% @articles.each do |a| %>
      <div class="article">
        <a href="<%= article_path(a.id) %>" class="article-img"><img src="<%= Url.find_by(id: a.url_id).image %>" alt=""></a>
        <div class="article-text">
          <a href="<%= article_path(a.id) %>" class="article-text-title"><%= Url.find_by(id: a.url_id).title %></a>
          <a href="" class="article-text-tag">Tag</a>
          <a href="" class="article-text-description"><%= Url.find_by(id: a.url_id).description %></a>
        </div>
      </div>
    <% end %>
  </div>

  <a href="<%= new_article_path %>">New</a>
</div>